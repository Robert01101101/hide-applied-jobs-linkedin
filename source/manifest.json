{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"name": "Hide Applied Jobs LinkedIn",
	"version": "1.0.1",
	"description": "Hide jobs you have already applied to from your job search results on LinkedIn.",
	"homepage_url": "https://github.com/Robert01101101/hide-applied-jobs-linkedin/",
	"manifest_version": 3,
	"minimum_chrome_version": "121",
	"browser_specific_settings": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "109.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"matches": [ "https://www.linkedin.com/*" ],
			"js": [ "content.js" ],
			"css": [ "content.css" ],
			"run_at": "document_end"
		}
	],
	"action": {
        "default_popup": "options.html",
        "default_icon": "icon.png"
    },
	"permissions": [
		"storage"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"background": {
		"service_worker": "background.js",
		"type": "module",
		"scripts": [ "background.js" ]
	}
}
